{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../dist/server",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": false,
    "noEmit": false
  },
  "include": [
    "."
  ],
  "exclude": [
    "../frontend",
    "../dist",
    "node_modules"
  ]
}